{
  "name": "@booleon/react",
  "version": "2.0.5-alpha.0",
  "description": "Booleon React is a DX focused library for, a highly typed declarative, styling, using component boolean properties.Works by mapping a pre-defined entry of css with keys thatcan be static string or dynamic RegEx.",
  "author": "Vin√≠cius Victorino",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/react.esm.js",
  "peerDependencies": {
    "@booleon/core": "*"
  },
  "devDependencies": {
    "@booleon/core": "file:../core/src",
    "tsdx": "^0.14.1",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "size": "size-limit",
    "emit": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build": "tsdx build --transpileOnly && npm run emit"
  },
  "size-limit": [
    {
      "path": "dist/react.cjs.production.min.js",
      "limit": "7 KB"
    },
    {
      "path": "dist/react.esm.js",
      "limit": "7 KB"
    }
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/viniciusflv/booleon.git"
  }
}
