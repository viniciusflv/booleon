{
  "name": "booleon",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "lerna bootstrap",
    "lint": "lint-staged",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "start-storybook -p 6006",
    "build": "build-storybook -c .storybook -o build/dist",
    "format": "prettier-eslint --write $PWD/**/*.{ts,tsx}",
    "pub": "npm test && npm run bun && lerna publish",
    "bun": "run-p bundle:*",
    "bundle:core": "lerna exec --scope=@booleon/core -- npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test --bail"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@booleon/core": "^0.1.6-alpha.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-a11y": "^6.0.22",
    "@storybook/addon-backgrounds": "^6.0.22",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.0.22",
    "@storybook/addon-storysource": "^6.0.22",
    "@storybook/addons": "^6.0.22",
    "@storybook/react": "^6.0.22",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.8",
    "@types/jest-axe": "^3.5.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-axe": "^4.0.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "ts-loader": "^7.0.5",
    "tsdx": "^0.14.0",
    "typescript": "^3.9.3"
  }
}
