{
  "name": "booleon",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "lerna clean -y",
    "setup": "lerna bootstrap",
    "format": "prettier --write $PWD/**/*.{ts,tsx}",
    "lint": "lint-staged",
    "test": "jest",
    "core": "lerna exec npm run $2 --scope=@booleon/core",
    "docs": "lerna exec npm run $2 --scope=@booleon/docs",
    "modules": "lerna exec npm run $2 --scope=@booleon/modules",
    "react": "lerna exec npm run $2 --scope=@booleon/react",
    "ui": "lerna exec npm run $2 --scope=@booleon/ui",
    "bun": "run-p bun:*",
    "bun:core": "npm run core build",
    "bun:modules": "npm run modules build",
    "bun:react": "npm run react build",
    "bun:ui": "npm run ui build",
    "pub": "npm test && npm run bun && lerna publish",
    "postinstall": "npm run setup"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test --bail"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "folderslint",
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viniciusflv/booleon.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viniciusflv/booleon/issues"
  },
  "homepage": "https://github.com/viniciusflv/booleon#readme",
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.2.0",
    "esbuild": "^0.13.12",
    "esbuild-node-externals": "^1.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.2",
    "folderslint": "^1.0.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-axe": "^4.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "typescript": "^4.4.4"
  }
}
